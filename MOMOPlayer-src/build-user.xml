<?xml version="1.0" encoding="UTF-8"?>
<project name="momoplayer" basedir=".">
    <property file="build.properties" />

    <path id="master.cp">
        <fileset dir="${lib.dir}">
            <include name="*.jar" />
        </fileset>
        <pathelement location="${bin.dir}" />
    </path>

    <target name="init">
        <mkdir dir="${src.dir}" />
        <mkdir dir="${test.dir}" />
        <mkdir dir="${doc.dir}" />
        <mkdir dir="${lib.dir}" />
    </target>

    <target name="clean">
        <delete dir="${bin.dir}" />
    </target>

    <!-- =============Compilation Targets============== -->
    <target name="compile" depends="init">
        <mkdir dir="${bin.dir}" />
        <javac classpathref="master.cp" source="1.6"
            target="1.6" srcdir="${src.dir}"
            destdir="${bin.dir}" />
        <copy todir="${bin.dir}">
            <fileset dir="${src.dir}">
                <exclude name="**/*.java" />
            </fileset>
        </copy>
    </target>

    <target name="compile.test" depends="compile">
        <mkdir dir="${bin.dir}" />
        <javac classpathref="master.cp" source="1.6"
            target="1.6" srcdir="${test.dir}"
            destdir="${bin.dir}" />
        <copy todir="${bin.dir}">
            <fileset dir="${test.dir}">
                <exclude name="**/*.java" />
            </fileset>
        </copy>
    </target>

    <!-- =============Testing Targets============= -->
    <target name="test" depends="compile.test">
        <mkdir dir="${doc.test}" />
        <junit printsummary="true" haltonfailure="true">
            <classpath refid="master.cp" />
            <formatter type="plain" usefile="false" />
            <formatter type="xml" usefile="true" />
            <batchtest todir="${doc.test}" fork="true">
                <fileset dir="${test.dir}">
                    <include name="**/*Test.java" />
                </fileset>
            </batchtest>
        </junit>
    </target>

    <target name="test.report">
        <mkdir dir="${doc.test.html}" />
        <mkdir dir="tmp" />
        <junitreport todir="tmp">
            <fileset dir="${doc.test}">
                <include name="TEST-*.xml" />
            </fileset>
            <report format="frames" todir="${doc.test.html}" />
        </junitreport>
        <delete dir="tmp" />
    </target>

    <!-- ============Documentation Targets=========== -->
    <target name="doc.api">
        <mkdir dir="${doc.api}" />
        <javadoc destdir="${doc.api}" classpathref="master.cp"
            stylesheetfile="${doc.common}/jdstyle.css">
            <fileset dir="${src.dir}">
                <include name="**/*.java" />
            </fileset>
            <doctitle><![CDATA[<h1>MOMOPlayer API</h1>]]></doctitle>
        </javadoc>
    </target>
</project>
